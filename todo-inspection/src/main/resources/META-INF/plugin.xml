<idea-plugin require-restart="true">
    <id>com.github.frimtec.idea-todo-inspection-plugin</id>
    <name>Todo Inspection</name>

    <vendor email="frimtec@gmx.ch" url="https://github.com/frimtec">frimTEC</vendor>
    <description><![CDATA[
        Reports TODO/FIXME comments that are missing a Jira ticket reference or that point to a ticket that is closed, resolved, or non-existent.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language=""
                         displayName="TODO comment (enhanced)"
                         enabledByDefault="false"
                         groupName="General"
                         implementationClass="com.github.frimtec.idea.plugin.todoinspection.TodoInspection"/>
    </extensions>
</idea-plugin>